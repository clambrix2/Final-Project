<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Changeinfo">

    <EditText
        android:id="@+id/et_v_change_newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/et_v_change_confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="180dp"
        android:text="New Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Confirm Password"
        app:layout_constraintStart_toStartOf="@+id/et_v_change_newpassword"
        app:layout_constraintTop_toBottomOf="@+id/et_v_change_newpassword" />

    <TextView
        android:id="@+id/tv_v_change_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#F40F0F"
        android:text="Error Passwords do not match"
        android:textColor="#E90000"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_change_edit"
        app:layout_constraintEnd_toEndOf="@+id/btn_v_change_goback"
        app:layout_constraintStart_toEndOf="@+id/btn_v_change_goback" />

    <Button
        android:id="@+id/btn_v_change_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="173dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_v_change_error"
        app:layout_constraintStart_toEndOf="@+id/tv_v_change_error" />

    <Button
        android:id="@+id/btn_v_change_goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="2dp"
        android:text="Go back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_change_error" />
</androidx.constraintlayout.widget.ConstraintLayout>